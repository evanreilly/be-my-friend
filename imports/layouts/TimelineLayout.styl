.TimelineLayout

  margin-bottom 24px

  .Timeline
    cursor default
    z-index 10

  &__statusBar
  &__info
    position fixed
    top 100%
    left 0
    padding 4px 7px 5px
    font-family defaultFont
    font-size 11px
    line-height 1.3
    color white
    z-index 15
    pointer-events none
    width 100%
    transform translateY(-100%)

  &__statusBar
    border-top 1px solid #c8c8c8
    color #535353
    font-weight 400
    background linear-gradient(#eeeeee, #d6d6d6)
