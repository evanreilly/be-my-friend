.TimelineLayout

  .Timeline
    cursor default
    z-index 10

  .info
    position fixed
    top 100%
    left 0
    padding 2px 5px
    font-family "Lucida Console", Monaco, monospace
    font-size 12px
    line-height 1.3
    color white
    z-index 15
    pointer-events none
    width 100%
    transform translateY(-100%)
