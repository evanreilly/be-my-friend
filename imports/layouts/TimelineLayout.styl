.TimelineLayout

  // margin-bottom 24px
  position relative
  min-height 100%
  cursor default

  &__svgs
    position relative
    min-height 100vh
    z-index 10

  &__oneLine
    white-space nowrap

  &__statusBar
  &__info
    position fixed
    top 100%
    left 0
    padding 4px 7px 5px
    font-family defaultFont
    min-height 24px
    font-size 11px
    line-height 1.3
    color textColor
    z-index 15
    pointer-events none
    // width 100%
    transform translateY(-100%)

    &.bottom
      transform none
    &.left
      text-align right
      transform translateY(-100%) translateX(-100%)
    &.bottom.left
      text-align right
      transform translateX(-100%)

  &__info
    display none
  &:hover &__info
    display inline-block

  &__statusBar
    // border-top 1px solid #c8c8c8
    // background linear-gradient(#eeeeee, #d6d6d6)
    // color #535353
    font-weight 400

  &__emptyMessage
    font-family defaultFont
    position fixed
    top 50%
    transform translateY(-50%)
    width 100%
    text-align center
    font-size 11px
    line-height 1.3
    color rgba(textColor, 0.2)
    z-index 0
    pointer-events none
